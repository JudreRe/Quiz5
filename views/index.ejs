<%- include("_header") -%>

<h3>Find Cars:</h3>

<form action="/" method="POST">
    <table>
        <tr>
            <td><label class="col-form-label col-sm-2" for="carvin">VIN</label>:</td>
            <td><input type="number" name="carvin" id="carvin" value="<%= car.carvin %>" /></td>
            <td>(equal)</td>
        </tr>
        <tr>
            <td><label class="col-form-label col-sm-2" for="carmake">Make</label>:</td>
            <td><input type="text" name="carmake" id="carmake" value="<%= car.carmake %>" /></td>
            <td>(starts with)</td>
        </tr>
        <tr>
            <td><label class="col-form-label col-sm-2" for="carmodel">Model</label>:</td>
            <td><input type="text" name="carmodel" id="carmodel" value="<%= car.carmodel %>" /></td>
            <td>(begins with)</td>
        </tr>
        <tr>
            <td><label class="col-form-label col-sm-2" for="carmileage">Mileage</label>:</td>
            <td><input type="number" name="carmileage" id="carmileage" value="<%= car.carmileage %>" /></td>
            <td>(greater than or equal)</td>
        </tr>
        <tr>
            <td span="2">
                <input class ="btn btn-primary" type="submit" value="Find" />
                <input class ="btn btn-primary" type="reset" value="Reset" />
            </td>
        </tr>
    </table>
</form>

<% if (type === "post") { %>
    <% if (result.result.length === 0) { %>
        <h3>No records found!</h3>
    <% } else { %>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>VIN</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Mileage</th>
                </tr>
            </thead>
            <tbody>
                <% result.result.forEach(car => { %> 
                    <tr>
                        <td><%= car.carvin %></td>
                        <td><%= car.carmake %></td>
                        <td><%= car.carmodel %></td>
                        <td><%= car.carmileage %></td>
                    </tr>
                <% }); %>
            </tbody>

        </table>
    <% } %>
<% } %>

<%- include("_footer") -%>   